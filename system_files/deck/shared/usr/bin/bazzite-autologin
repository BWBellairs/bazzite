#!/usr/bin/bash

source /etc/default/desktop-wayland

IMAGE_INFO="/usr/share/ublue-os/image-info.json"
BASE_IMAGE_NAME=$(jq -r '."base-image-name"' < $IMAGE_INFO)

USER=$(id -nu 1000)
HOME=$(getent passwd $USER | cut -d: -f6)

# DM config
if [[ ${BASE_IMAGE_NAME} = 'kinoite' ]]; then
  DM_CONF='/etc/sddm.conf.d/steamos.conf'
  AUTOLOGIN_CONF='/etc/sddm.conf.d/zz-steamos-autologin.conf'
elif [[ ${BASE_IMAGE_NAME} = 'silverblue' ]]; then
  DM_CONF="/etc/gdm/custom.conf"
  AUTOLOGIN_CONF="/var/lib/AccountsService/users/$USER"
fi
DESKTOP_AUTOLOGIN='/etc/bazzite/desktop_autologin'

# Avoid autologin conflict
if [[ -f ${AUTOLOGIN_CONF} ]]; then
  rm -f ${AUTOLOGIN_CONF}
fi

# Configure autologin if Steam has been updated
if [[ ! -f ${DESKTOP_AUTOLOGIN} && -f $HOME/.local/share/Steam/ubuntu12_32/steamui.so ]]; then
  if [[ ${BASE_IMAGE_NAME} =~ "kinoite" ]]; then
    sed -i 's/.*Session=.*/Session=gamescope-session.desktop/g' ${DM_CONF}
    sed -i 's/.*User=.*/User='${USER}'/g' ${DM_CONF}
  elif [[ ${BASE_IMAGE_NAME} =~ "silverblue" ]]; then
    echo -e "[daemon]\nTimedLoginEnable=true\nTimedLoginDelay=1\nTimedLogin=$USER" > ${DM_CONF}
    mkdir -p $(dirname ${AUTOLOGIN_CONF})
    echo -e "[User]\n#Session=gamescope-session.desktop\n#XSession=" > ${AUTOLOGIN_CONF}
  fi
elif [[ ${BASE_IMAGE_NAME} =~ "kinoite" ]]; then
  if ${DESKTOP_WAYLAND}; then
    sed -i 's/.*Session=.*/Session=plasma.desktop/g' ${DM_CONF}
  else
    sed -i 's/.*Session=.*/Session=plasmax11.desktop/g' ${DM_CONF}
  fi
  sed -i 's/.*User=.*/User='${USER}'/g' ${DM_CONF}
elif [[ ${BASE_IMAGE_NAME} =~ "silverblue" ]]; then
  echo -e "[daemon]\nTimedLoginEnable=true\nTimedLoginDelay=1\nTimedLogin=$USER" > ${DM_CONF}
  mkdir -p $(dirname ${AUTOLOGIN_CONF})
  echo -e "[User]\n#Session=\n#XSession=" > ${AUTOLOGIN_CONF}
  if ${DESKTOP_WAYLAND}; then
    sed -i 's/.*Session=.*/Session=gnome-wayland.desktop/g' ${AUTOLOGIN_CONF}
  else
    sed -i 's/.*XSession=.*/XSession=gnome-xorg.desktop/g' ${AUTOLOGIN_CONF}
  fi
fi
